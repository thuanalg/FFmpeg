CFLAGS+=-g -fPIC -shared -Wall -Wl,--out-implib,libsimplelog.a  -static-libgcc
CFLAGS_R+=-fPIC -shared -Wall -Wl,--out-implib,libsimplelog.a  -static-libgcc
SRC=src/simplelog.c
INCL=-I./include
CC=gcc
TARGET=libsimplelog.dll
debug:
	${CC} -o ${TARGET} ${SRC} ${CFLAGS} ${INCL}
release:
	${CC} -o ${TARGET} ${SRC} ${CFLAGS_R} ${INCL}
clean:
	rm -f *.a *.dll